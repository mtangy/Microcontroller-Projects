include "m8c.inc"


;--------------------------------------------------
; Constants for UARTClock API's.
;--------------------------------------------------

UARTClock_CONTROL_REG_START_BIT:           equ 0x01    ; Control register start bit
UARTClock_INT_REG:                         equ 0x0df
UARTClock_INT_MASK:                        equ 0x20


;--------------------------------------------------
; Constants for UARTClock user defined values
;--------------------------------------------------

UARTClock_PERIOD:                          equ 0x33
UARTClock_COMPARE_VALUE:                   equ 0x19


;--------------------------------------------------
; Register Address Constants for UARTClock
;--------------------------------------------------

UARTClock_COUNTER_LSB_REG:             equ 0x50   ; DR0 Counter register
UARTClock_COUNTER_MSB_REG:             equ 0x54
UARTClock_PERIOD_LSB_REG:              equ 0x51   ; DR1 Period register
UARTClock_PERIOD_MSB_REG:              equ 0x55
UARTClock_COMPARE_LSB_REG:             equ 0x52   ; DR2 CompareValue register
UARTClock_COMPARE_MSB_REG:             equ 0x56
UARTClock_CONTROL_LSB_REG:             equ 0x53   ; Control register
UARTClock_CONTROL_MSB_REG:             equ 0x57
UARTClock_FUNC_LSB_REG:                equ 0x50   ; Function register
UARTClock_FUNC_MSB_REG:                equ 0x54
UARTClock_INPUT_LSB_REG:               equ 0x51   ; Input register
UARTClock_INPUT_MSB_REG:               equ 0x55
UARTClock_OUTPUT_LSB_REG:              equ 0x52   ; Output register
UARTClock_OUTPUT_MSB_REG:              equ 0x56


;--------------------------------------------------
; UARTClock Macro 'Functions'
;--------------------------------------------------

   macro UARTClock_Start_M
   or    reg[UARTClock_CONTROL_LSB_REG],  UARTClock_CONTROL_REG_START_BIT
   endm

   macro UARTClock_Stop_M
   and   reg[UARTClock_CONTROL_LSB_REG], ~UARTClock_CONTROL_REG_START_BIT
   endm

   macro UARTClock_EnableInt_M
   M8C_EnableIntMask UARTClock_INT_REG, UARTClock_INT_MASK
   endm

   macro UARTClock_DisableInt_M
   M8C_DisableIntMask UARTClock_INT_REG, UARTClock_INT_MASK
   endm


